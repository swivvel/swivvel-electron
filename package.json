{
  "name": "swivvel",
  "productName": "Swivvel",
  "version": "1.2.1",
  "author": {
    "name": "Swivvel",
    "email": "support@swivvel.io"
  },
  "description": "Swivvel gets your whole team on the same page, literally. Swivvel brings your team’s meetings to life in a whole new way.",
  "homepage": "https://www.swivvel.io",
  "main": "compiled/background/background.js",
  "build": {
    "appId": "com.electron.swivvel",
    "productName": "Swivvel",
    "protocols": {
      "name": "swivvel",
      "schemes": [
        "swivvel"
      ]
    },
    "copyright": "Copyright © 2023 Swivvel",
    "executableName": "swivvel",
    "artifactName": "${productName}.${ext}",
    "beforeBuild": false,
    "npmRebuild": false,
    "afterSign": "electron-builder-notarize",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Swivvel uses your microphone for your team's audio room",
        "com.apple.security.device.audio-input": true
      }
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.icns",
      "category": "Utility",
      "desktop": {
        "MimeType": "x-scheme-handler/swivvel"
      },
      "mimeTypes": [
        "x-scheme-handler/swivvel"
      ]
    }
  },
  "scripts": {
    "check": "npx npm-check --skip-unused",
    "compile": "rm -rf compiled && mkdir compiled && cp src/*.png compiled && tsc",
    "dev": "electron compiled/background/background.js",
    "dist": "npm run compile && electron-builder",
    "lint": "eslint .",
    "types": "tsc --noEmit",
    "watch": "mkdir -p compiled && cp src/*.png compiled && tsc --watch"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.4",
    "electron-builder-notarize": "^1.5.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
