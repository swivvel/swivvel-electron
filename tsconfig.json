{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "compiled",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016"
  },
  "include": ["src/**/*"],
  "exclude": [".eslintrc", "build", "compiled", "dist", "node_modules"],
  "paths": {
    "*": ["node_modules/*"]
  }
}
