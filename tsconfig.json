{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "compiled",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016"
  },
  "include": [
    ".eslintrc.js",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "paths": {
    "*": ["node_modules/*"]
  }
}
